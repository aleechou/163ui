	<Binding name="RECOUNT_REPORT_MAIN" header="RECOUNT" category="ADDONS">
		Recount:ShowReport("Main",Recount.ReportData)
	</Binding>
	<Binding name="RECOUNT_REPORT_DETAILS" header="RECOUNT" category="ADDONS">
		Recount:ShowReport("Detail",Recount.ReportDetail)
	</Binding>
	<Binding name="RECOUNT_RESET_DATA" header="RECOUNT" category="ADDONS">
		Recount:ShowReset()
	</Binding>
	<Binding name="RECOUNT_SHOW_MAIN" header="RECOUNT" category="ADDONS">
		Recount.MainWindow:Show()
		Recount:RefreshMainWindow()
	</Binding>
	<Binding name="RECOUNT_HIDE_MAIN" header="RECOUNT" category="ADDONS">
		Recount.MainWindow:Hide()
	</Binding>
	<Binding name="RECOUNT_TOGGLE_MAIN" header="RECOUNT" category="ADDONS">
		if Recount.MainWindow:IsShown() then
			Recount.MainWindow:Hide()
		else
			Recount.MainWindow:Show()
			Recount:RefreshMainWindow()
		end
	</Binding>
	<Binding name="RECOUNT_TOGGLE_PAUSE" header="RECOUNT" category="ADDONS">
		Recount:SetGlobalDataCollect(not Recount.db.profile.GlobalDataCollect)
	</Binding>
</Bindings>
