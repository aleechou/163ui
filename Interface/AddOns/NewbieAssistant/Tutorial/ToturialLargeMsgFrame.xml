					<Anchor point="TOPRIGHT">
						<Offset x="-40" y="-7" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						NewbieAssistantTutorialLargeMsgFramePlaySoundButton_OnClick(self)
