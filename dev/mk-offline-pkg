
DATEVERSION=$1
PKGPATH=$2
IGNOREADDONS=$3

echo "pack full offline ..."
mkdir -p workdir/tmp/offline-packing
cd workdir/tmp/offline-packing
unrar x $PKGPATH
mkdir -p 网易有爱/data/packages
cp ../../packages/* 网易有爱/data/packages/
zip -r ../../offline/163ui-full-offline-${DATEVERSION}.zip * 
cd -
echo "done"


echo "pack offline ..."
cd ../Interface/AddOns
rar a -inul ${IGNOREADDONS}  ../../dev/workdir/offline/163ui-offline-${DATEVERSION}.rar * 
cd -
echo "done"
