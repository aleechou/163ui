
DATEVERSION=$1
PKGPATH=$2
IGNOREADDONS=$3

echo "pack full offline ..."
cp $PKGPATH workdir/offline/163ui-full-offline-${DATEVERSION}.rar
rm -r workdir/tmp/data/packages
mkdir -p workdir/tmp/网易有爱/data/packages
cp workdir/packages/*  workdir/tmp/网易有爱/data/packages/
cd workdir/tmp
rar a ../offline/163ui-full-offline-${DATEVERSION}.rar 网易有爱
cd -
echo "done"


echo "pack offline ..."
cd ../Interface/AddOns
rar a -inul ${IGNOREADDONS}  ../../dev/workdir/offline/163ui-offline-${DATEVERSION}.rar * 
cd -
echo "done"
